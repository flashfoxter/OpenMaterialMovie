<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorToolbarBackground</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorBackground">@color/colorDarkBackground</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Color bor background -->
        <item name="android:background">@color/white</item>
        <!-- Color for title text (and buttons, but they colored in code) -->
        <item name="android:textColor">@color/black</item>
        <!-- Color for text inside alert aka description -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


</resources>
